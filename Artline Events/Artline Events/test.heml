-- For the booking table
ALTER TABLE booking
MODIFY EventID INT NOT NULL,
MODIFY CustomerID INT NOT NULL,
MODIFY OrganizerID INT NOT NULL,
MODIFY VenueID INT NOT NULL,
MODIFY Price DECIMAL(10, 2) NOT NULL,
MODIFY Payment VARCHAR(50) NOT NULL,
MODIFY Bookingdate DATE NOT NULL;

-- For the venue table
ALTER TABLE venue
MODIFY VenueName VARCHAR(255) NOT NULL,
MODIFY VenueCapacity INT NOT NULL,
MODIFY VenueLocation VARCHAR(255) NOT NULL;

-- For the customer table
ALTER TABLE customer
MODIFY FullName VARCHAR(255) NOT NULL,
MODIFY Email VARCHAR(255) NOT NULL,
MODIFY Phone VARCHAR(20) NOT NULL,
MODIFY Gender VARCHAR(10) NOT NULL,
MODIFY Username VARCHAR(50) NOT NULL,
MODIFY Password VARCHAR(50) NOT NULL;

-- For the eevent table
ALTER TABLE eevent
MODIFY Eventname VARCHAR(255) NOT NULL,
MODIFY Eventtitle VARCHAR(255) NOT NULL,
MODIFY Eventdate DATE NOT NULL,
MODIFY Eventdescription TEXT NOT NULL,
MODIFY CustomeriD INT NOT NULL,
MODIFY VenueID INT NOT NULL;


-- For the organizers table
ALTER TABLE organizers
MODIFY OrganizerName VARCHAR(255) NOT NULL,
MODIFY OrganizerEmail VARCHAR(255) NOT NULL,
MODIFY OrganizerPhone VARCHAR(20) NOT NULL,
MODIFY OrganizerUsername VARCHAR(50) NOT NULL,
MODIFY OrganizerPassword VARCHAR(50) NOT NULL;
